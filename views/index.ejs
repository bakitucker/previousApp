<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Palindrom</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>Palindrome</h1>
  <h2></h2>


  <h3>Words</h3>
  <ul class="messages">
  <% for(var i=0; i<messages.length; i++) {%>
    <li class="message">
      <span><%= messages[i].word %></span>
      <span><%= messages[i].checkP %></span>
      <!-- <button class="check">Check if it's a palindrome !<i class="fa fa-thumbs-up" aria-hidden="true"></i></button> -->
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>

  <h2>Add a message</h2>

  <form action="/words" method="POST">
    <input type="text" placeholder="name" name="word">
    <button type="submit">Submit</button>
  </form>

  <script src="main.js"></script>

</body>
</html>
